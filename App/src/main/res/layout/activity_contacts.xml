<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_gravity="center">

    <FrameLayout
        android:id="@+id/search_added_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/contact_search"
            android:hint="@string/search_contacts"
            android:textColor="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionDone"/>

        <Button
            android:id="@+id/clear_contact_filter"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end|center_vertical"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="invisible" />

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/headers"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_added_contact">

        <TextView
            android:id="@+id/canseeme"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/can_see_me"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:gravity="end"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"/>

        <TextView
            android:id="@+id/icansee"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp"
            android:gravity="end"
            android:text="@string/i_can_see" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headers"
        android:id="@+id/contacts_list_view" />

</RelativeLayout>